            .navbar-brand {
                font-size: 1.5rem;
            }

            .nav-link {
                margin: 0.25rem 0;
                padding: 0.5rem 1rem;
            }
        }

        /* Special Effects */
        .bg-blur {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.85) !important;
        }        

    </style>

</head>

