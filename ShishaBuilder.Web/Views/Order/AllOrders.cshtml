@model IEnumerable<ShishaBuilder.Core.Models.Order>
@using ShishaBuilder.Core.Enums
@{
    ViewData["Title"] = "All Orders";
}


<div class="container mt-4">
    <h2 class="mb-4">All Orders</h2>

    @if (Model?.Any() != true)
    {
        <div class="alert alert-info">
            No orders found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Hookah</th>
                        <th>Table</th>
                        <th>Master</th>
                        <th>Created</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>Hookah #@order.HookahId</td>
                            <td>Table #@order.TableId</td>
                            <td>Master #@order.MasterId</td>
                            <td>
                                @if (order.OrderTobaccos?.Any() == true)
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var tobacco in order.OrderTobaccos)
                                        {
                                            <li>
                                                @tobacco.Tobacco?.Name (@tobacco.Percentage%)
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">No tobaccos</span>
                                }
                            </td>
                            <td>@order.CreatedAt.ToString("g")</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(order.OrderStatus)">
                                    @order.OrderStatus
                                </span>
                            </td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id" 
                                   class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Completed => "badge-success",
            OrderStatus.InProgress => "badge-primary",
            OrderStatus.Pending => "badge-warning",
            OrderStatus.Cancelled => "badge-danger",
            _ => "badge-secondary"
        };
    }
}

<style>
    .table th {
        font-weight: 600;
        white-space: nowrap;
    }
    .badge {
        font-size: 0.85em;
        padding: 0.35em 0.65em;
        min-width: 80px;
        display: inline-block;
        text-transform: capitalize;
    }
    .list-unstyled li {
        margin-bottom: 3px;
    }
</style>