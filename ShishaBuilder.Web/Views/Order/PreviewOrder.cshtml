@model ShishaBuilder.Core.DTOs.OrderDtos.OrderPreviewViewModelDto

@if (Model == null || Model.Hookah == null )
{
    <div class="alert alert-danger" role="alert">
        Order data is not available. Please try again.
    </div>
    return;
}
<div class="container">
    <div class="card mb-4">
        <div class="row g-0">
            <!-- Фото кальяна -->
            <div class="col-md-4">
                @if ( Model.Hookah != null && Model.Hookah.Image!=null)
                {
                    <img src="@Model.Hookah.Image" class="img-fluid rounded-start" alt="@Model.Hookah.ModelName" style="max-height: 400px; width: 100%; object-fit: cover;">
                } 
                 else
                {
                    <div class="d-flex align-items-center justify-content-center bg-light" style="height: 300px; width: 100%;">
                        <span class="text-muted">No image available</span>
                    </div>
                }

            </div>
            
            <!-- Детали заказа -->
            <div class="col-md-8">
                <div class="card-body">
                    @if(Model.Hookah.ModelName!=null)
                    {

                        <h3 class="card-title">@Model.Hookah.ModelName</h3>
                    }
                    <div class="mb-3">
                        <h5>Table: <span class="badge bg-secondary">@Model.Table.TableNumber</span></h5>
                    </div>
                    
                    <div class="mb-3">
                        <h5>Your Custom Mix:</h5>
                        <ul class="list-group">
                            @foreach (var item in Model.SelectedTobaccos)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@item.Tobacco.Name</strong> (@item.Tobacco.Brand)
                                        <br>
                                        <small>@item.Tobacco.Flavor - @item.Tobacco.Strength</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@item.Percentage%</span>
                                </li>
                            }
                        </ul>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <form asp-action="CreateOrder" method="post" class="mt-3">
                            <input type="hidden" asp-for="Hookah.Id" />
                            <input type="hidden" asp-for="Table.Id" />
                            
                            @foreach (var (tobaccoId, percentage) in Model.TobaccoPercentages)
                            {
                                <input type="hidden" name="TobaccoPercentages[@tobaccoId]" value="@percentage" />
                            }
                            
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check"></i> Confirm Order
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .list-group-item {
        border-left: none;
        border-right: none;
    }
</style>