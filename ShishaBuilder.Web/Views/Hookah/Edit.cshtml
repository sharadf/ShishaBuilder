@model ShishaBuilder.Core.DTOs.HookahDtos.EditHookah

@{
    ViewData["Title"] = "Edit Hookah";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold text-success">@ViewData["Title"]</h2>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@ViewBag.HookahId" />

                        <div class="mb-3">
                            <label asp-for="ModelName" class="form-label fw-semibold"></label>
                            <input asp-for="ModelName" class="form-control form-control-lg" placeholder="Enter model name" />
                            <span class="text-danger" asp-validation-for="ModelName"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label fw-semibold"></label>
                            <input asp-for="CompanyName" class="form-control form-control-lg" placeholder="Enter company name" />
                            <span class="text-danger" asp-validation-for="CompanyName"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Current Image:</label><br />
                            <img src="@ViewBag.ExistingImage" alt="Image" class="img-thumbnail shadow-sm mt-2" style="max-width: 200px;" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label fw-semibold">Change Image</label>
                            <input asp-for="ImageFile" class="form-control" type="file" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4 py-2">ðŸ’¾ Save Changes</button>
                            <a asp-action="AllHookahs" class="btn btn-outline-secondary px-4 py-2">â†© Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
