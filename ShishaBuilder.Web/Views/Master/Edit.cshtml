@model ShishaBuilder.Core.Dtos.MasterDtos.CreateMasterViewModel

@{
    ViewData["Title"] = "Edit Master";
    var masterId = ViewBag.MasterId;
    var existingImage = ViewBag.ExistingImage as string;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" asp-route-id="@masterId">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>Current Photo</label><br />
        <img src="@existingImage" alt="Master photo"
            style="width: 200px; height: auto; object-fit: cover; border-radius: 10px;" />
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">New Photo (optional)</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
